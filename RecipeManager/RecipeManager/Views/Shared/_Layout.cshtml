@using RecipeManager.Models
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager
@{
    ViewData["Title"] = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Homemade+Apple|Ubuntu&display=swap" rel="stylesheet">
    <link href="~/css/Reset.css" rel="stylesheet" />
    <link href="~/css/Base.css" rel="stylesheet" />
    <link href="~/css/hamburgers.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h2>RecipeManager</h2>
        <button class="small-screen hamburger hamburger--collapse" type="button">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
        <nav class="small-screen-hidden">
            <ul>
                @if (signInManager.IsSignedIn(User))
                {
                    <li><a href="~/Account/Logout">Logout</a></li>
                    <li><a href="~/SavedRecipes/ViewAll">Saved Recipes</a></li>
                }
                else
                {
                    <li><a href="~/Account/Login">Login</a></li>
                    <li><a href="~/Account/Register">Register</a></li>
                }
                <li><a href="~/Recipes/Add">Add Recipe</a> </li>
                <li><a href="~/">All Recipes</a></li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>h<p></p><p>h</p><p>h</p><p>h</p> </footer>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="~/js/app.js"></script>
</body>
</html>